{% extends 'base_content.html.twig' %}

{% block title %}Управление комментариями{% endblock %}

{% block content %}
    <h1>Управление комментариями</h1>

    <form>
        <div class="input-group mb-3">
            <input type="text"
                   name="q"
                   class="form-control"
                   placeholder="Найти..."
                   value="{{ app.request.query.get('q') }}"
            >
            <div class="input-group-append">
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
        <div class="input-group mb-3">
            <div class="form-check">
                <input type="checkbox"
                       name="showDeleted"
                       class="form-check-input"
                       {% if app.request.query.has('showDeleted') %}checked{% endif %}
                >
                <div class="form-check-label">
                    Показать удаленные
                </div>
            </div>
        </div>
    </form>


    <table class="table table-striped">
        <thead>
        <tr>
            <th>Статья</th>
            <th>Автор</th>
            <th>Комментарий</th>
            <th>Дата</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>
                    <a href="{{ path('app_article_show', {slug: comment.article.slug}) }}">
                        {{ comment.article.title }}
                    </a>
                </td>
                <td>{{ comment.authorName }}</td>
                <td style="width: 20%;">{{ comment.content|markdown_cached|u.truncate(40, '..')|raw }}</td>
                <td>
                    {% if comment.deleted %}
                        DELETED
                    {% endif %}
                    {{ comment.createdAt|ago }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Нет комментариев</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}