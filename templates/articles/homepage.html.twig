{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">

        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-12 col-md-8">

                    <div class="col-sm-12 border rounded-lg overflow-hidden flex-md-row mb-4 shadow-sm position-relative bg-white featured-border">
                        <div class="row">
                            <a class="banner-link" href="#">
                                <div class="banner-img-block d-block">
                                    <img class="banner-img" src="{{ asset('images/cat-banner1.jpg') }}">
                                </div>
                                <h1 class="text-center mt-2 px-4">
                                    Спать или не спать: <br>С новыми кроватками это не вопрос
                                </h1>
                            </a>
                        </div>
                    </div>

                    {% for article in articles %}
                        <div class="article-container mb-2">
                            <div class="row no-gutters border rounded-lg overflow-hidden flex-md-row mb-4 shadow-sm position-relative">
                                <div class="col-auto d-none d-lg-block">
                                    <img class="article-img" src="{{ asset_uploads('uploads_articles', article.imageFilename) }}">
                                </div>
                                <a class="col p-2 px-4 d-flex flex-column article-item" href="{{ path('app_article_show', {slug: article.slug}) }}">
                                    <h5 class="mb-2">
                                        {{ article.title }}
                                        <span class="badge badge-info article-comments">
                                            {{ article.nonDeletedComments|length }} комментов
                                        </span>
                                    </h5>
                                    {% include('_partial/article/article_tags.html.twig') with {tags: article.tags} %}
                                    <div class="d-flex justify-content-between">
                                        <div class="text-muted align-self-center">
                                            <img class="article-author-img rounded-circle" src="{{ article.author.avatarUrl }}">
                                            {{ article.author.firstName }}
                                        </div>
                                        <div class="text-muted align-self-center">
                                            {{ article.publishedAt|ago }}
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="col-sm-12 col-md-4 text-center">
                    <div class="bg-white shadow-sm border rounded-lg pb-2 pt-2 px-5 mb-4 featured-border">
                        <div class="ad-space mx-auto mt-1 pb-2 pt-2">
                            <img class="advertisement-img mb-2" src="{{ asset('images/cat-food.jpg') }}">
                            <p>
                                <b>Новинка:</b>
                                Лакомные
                                <i class="fas fa-heart text-warning"></i>
                                <i class="fas fa-heart text-info"></i>
                                <i class="fas fa-heart text-danger"></i>
                            </p>
                            <button class="btn btn-info">Купить сейчас</button>
                        </div>
                    </div>

                    <div class="quotes-container bg-white shadow-sm border rounded-lg pb-2 pt-2 px-5 featured-border">
                        <h3 class="text-center pb-3">Коты в теме</h3>
                        {% for comment in latestComments %}
                            <p>
                                <i class="far fa-comment text-secondary"></i>
                                {{ comment.content|u.truncate(198, '..') }}
                                <br> — <a href="#">{{ comment.authorName }}</a>
                            </p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
